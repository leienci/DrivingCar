<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.test.drivingcar.ui.view.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/ang_dp_20"
        android:layout_marginTop="60dp"
        android:src="@mipmap/icon_head_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ang_dp_20"
        android:text="立即登录"
        android:textColor="@color/ang_text_base"
        android:textSize="@dimen/ang_dp_20"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_head" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/ang_dp_15"
        android:layout_marginTop="@dimen/ang_dp_20"
        android:layout_marginRight="@dimen/ang_dp_15"
        app:cardCornerRadius="@dimen/ang_dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_k1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ang_dp_10"
                android:layout_marginTop="@dimen/ang_dp_10"
                android:paddingLeft="@dimen/ang_dp_10"
                android:paddingTop="@dimen/ang_dp_3"
                android:paddingRight="@dimen/ang_dp_10"
                android:paddingBottom="@dimen/ang_dp_3"
                android:text="科一"
                android:textColor="@color/ang_text_base"
                android:textSize="@dimen/ang_dp_13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_k4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ang_dp_10"
                android:paddingTop="@dimen/ang_dp_3"
                android:paddingRight="@dimen/ang_dp_10"
                android:paddingBottom="@dimen/ang_dp_3"
                android:text="科四"
                android:textColor="@color/ang_text_base"
                android:textSize="@dimen/ang_dp_13"
                app:layout_constraintLeft_toRightOf="@+id/tv_k1"
                app:layout_constraintTop_toTopOf="@id/tv_k1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ang_dp_10"
                android:drawableRight="@mipmap/icon_enter"
                android:text="切换题库：小车"
                android:textColor="@color/ang_text_base"
                android:textSize="@dimen/ang_dp_13"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_k1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_yszc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ang_dp_50"
        android:layout_marginTop="@dimen/ang_dp_20"
        android:drawableRight="@mipmap/icon_enter"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/ang_dp_15"
        android:paddingRight="@dimen/ang_dp_15"
        android:text="隐私政策"
        android:textColor="@color/ang_text_base"
        app:layout_constraintTop_toBottomOf="@+id/cv_question" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_yszc"
        android:background="@mipmap/bg_line" />

    <TextView
        android:id="@+id/tv_yhxy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ang_dp_50"
        android:layout_marginTop="@dimen/ang_dp_20"
        android:drawableRight="@mipmap/icon_enter"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/ang_dp_15"
        android:paddingRight="@dimen/ang_dp_15"
        android:text="用户协议"
        android:textColor="@color/ang_text_base"
        app:layout_constraintTop_toBottomOf="@+id/view_line1" />
</androidx.constraintlayout.widget.ConstraintLayout>