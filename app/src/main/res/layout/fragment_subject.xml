<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="驾考怎么考"
                android:textColor="@color/ang_text_base"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="新手必看指南"
                android:textColor="@color/ang_text_base"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_look"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="立即查看"
                android:textSize="13dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_home_car"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/sl_practice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/ang_dp_15"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sl_exam"
            app:layout_constraintTop_toBottomOf="@+id/iv_car">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ang_0864E9" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:src="@mipmap/icon_btn_left_top" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.7"
                    android:src="@mipmap/icon_btn_r_b" />

                <ImageView
                    android:layout_width="@dimen/ang_dp_50"
                    android:layout_height="@dimen/ang_dp_50"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/ang_dp_5"
                    android:alpha="0.7"
                    android:src="@mipmap/icon_btn_learn" />

                <TextView
                    android:id="@+id/tv_title_sx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ang_dp_15"
                    android:layout_marginTop="@dimen/ang_dp_18"
                    android:text="技巧练题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ang_dp_18" />


                <TextView
                    android:id="@+id/tv_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_sx"
                    android:layout_marginLeft="@dimen/ang_dp_15"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:text="0/0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ang_dp_12" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sl_exam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ang_dp_12"
            android:layout_marginEnd="@dimen/ang_dp_15"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/sl_practice"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sl_practice">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ang_39C868" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:src="@mipmap/icon_btn_left_top" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.7"
                    android:src="@mipmap/icon_btn_r_b" />

                <ImageView
                    android:layout_width="@dimen/ang_dp_50"
                    android:layout_height="@dimen/ang_dp_50"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/ang_dp_5"
                    android:alpha="0.7"
                    android:src="@mipmap/icon_btn_exam" />

                <TextView
                    android:id="@+id/tv_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ang_dp_15"
                    android:layout_marginTop="@dimen/ang_dp_18"
                    android:text="模拟考试"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ang_dp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_exam"
                    android:layout_marginStart="@dimen/ang_dp_15"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:text="100%仿真"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ang_dp_12" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rl_notification"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/ang_dp_15"
            android:layout_marginTop="@dimen/ang_dp_14"
            android:layout_marginRight="@dimen/ang_dp_15"
            android:background="@drawable/bg_ligth_blue"
            app:layout_constraintTop_toBottomOf="@+id/sl_practice">

            <ImageView
                android:id="@+id/iv_notifcation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ang_dp_12"
                android:background="@drawable/bg_cercle_blue"
                android:padding="@dimen/ang_dp_3"
                android:src="@mipmap/icon_notification_white" />

            <TextView
                android:id="@+id/tv_questions_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ang_dp_5"
                android:layout_toEndOf="@+id/iv_notifcation"
                android:gravity="center"
                android:text="已更新至最新题库"
                android:textColor="@color/ang_559BFE"
                android:textSize="@dimen/ang_dp_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ang_dp_15"
            android:layout_marginTop="@dimen/ang_dp_14"
            android:text="强化训练"
            android:textColor="@color/ang_232323"
            android:textSize="@dimen/ang_dp_16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_notification" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tv_retrench"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/ang_dp_15"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:layout_marginEnd="@dimen/ang_dp_12"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_err_col"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_power">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_home_500">

                <ImageView
                    android:layout_width="@dimen/ang_dp_50"
                    android:layout_height="@dimen/ang_dp_50"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_home_500" />

                <TextView
                    android:id="@+id/tv_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ang_dp_16"
                    android:layout_marginTop="@dimen/ang_dp_15"
                    android:text="500题精简题库"
                    android:textColor="@color/ang_094F99"
                    android:textSize="@dimen/ang_dp_17"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_500"
                    android:layout_marginLeft="@dimen/ang_dp_16"
                    android:layout_marginTop="@dimen/ang_dp_15"
                    android:text="一题一解析"
                    android:textColor="#6C7B8A"
                    android:textSize="@dimen/ang_dp_14" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tv_true_exam"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/ang_dp_15"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:layout_marginEnd="@dimen/ang_dp_12"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_err_col"
            app:layout_constraintTop_toBottomOf="@+id/tv_retrench">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_home_500">

                <ImageView
                    android:layout_width="@dimen/ang_dp_50"
                    android:layout_height="@dimen/ang_dp_50"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_home_500" />

                <TextView
                    android:id="@+id/tv_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ang_dp_16"
                    android:layout_marginTop="@dimen/ang_dp_15"
                    android:text="真实考场模拟"
                    android:textColor="@color/ang_094F99"
                    android:textSize="@dimen/ang_dp_17"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_true"
                    android:layout_marginLeft="@dimen/ang_dp_16"
                    android:layout_marginTop="@dimen/ang_dp_15"
                    android:text="电脑操作界面"
                    android:textColor="#6C7B8A"
                    android:textSize="@dimen/ang_dp_14" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sl_diff"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/ang_dp_12"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_retrench"
            app:layout_constraintRight_toLeftOf="@+id/sl_before_exam"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_power">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_home_diff">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/ang_dp_5"
                    android:src="@mipmap/icon_home_diff" />

                <TextView
                    android:id="@+id/tv_diff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_16"
                    android:text="难题攻克"
                    android:textColor="@color/ang_556DCA"
                    android:textSize="@dimen/ang_dp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_diff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:alpha="0.5"
                    android:text="难题逐步攻克"
                    android:textColor="#5E647D"
                    android:textSize="@dimen/ang_dp_9" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sl_before_exam"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/ang_dp_11"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:layout_marginRight="@dimen/ang_dp_15"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/sl_diff"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_power">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_home_diff">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/ang_dp_5"
                    android:src="@mipmap/icon_home_beexam" />

                <TextView
                    android:id="@+id/tv_kqmj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_16"
                    android:text="考前密卷"
                    android:textColor="@color/ang_556DCA"
                    android:textSize="@dimen/ang_dp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_kqmj"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:alpha="0.5"
                    android:text="考前难点重点"
                    android:textColor="#5E647D"
                    android:textSize="@dimen/ang_dp_9" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sl_new_banks"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/ang_dp_12"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_retrench"
            app:layout_constraintRight_toLeftOf="@+id/sl_signs"
            app:layout_constraintTop_toBottomOf="@+id/sl_diff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_home_diff">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/ang_dp_5"
                    android:src="@mipmap/icon_home_new_bank" />

                <TextView
                    android:id="@+id/tv_new_banks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_16"
                    android:text="新规题库"
                    android:textColor="@color/ang_556DCA"
                    android:textSize="@dimen/ang_dp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_new_banks"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:alpha="0.5"
                    android:text="实时更新题库"
                    android:textColor="#5E647D"
                    android:textSize="@dimen/ang_dp_9" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sl_signs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ang_dp_11"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:layout_marginRight="@dimen/ang_dp_15"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/sl_new_banks"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sl_diff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@mipmap/bg_home_diff">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/ang_dp_5"
                    android:src="@mipmap/icon_home_signs" />

                <TextView
                    android:id="@+id/tv_signs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_16"
                    android:text="标志速记"
                    android:textColor="@color/ang_556DCA"
                    android:textSize="@dimen/ang_dp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_signs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:alpha="0.5"
                    android:text="标志全面速记"
                    android:textColor="#5E647D"
                    android:textSize="@dimen/ang_dp_9" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sl_chapter"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/ang_dp_15"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_err_col"
            app:layout_constraintTop_toBottomOf="@+id/tv_true_exam">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_home_chapters">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/ang_dp_5"
                    android:src="@mipmap/icon_home_chapters" />

                <TextView
                    android:id="@+id/tv_chapters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ang_dp_17"
                    android:layout_marginTop="@dimen/ang_dp_16"
                    android:text="专项练习"
                    android:textColor="@color/ang_556DCA"
                    android:textSize="@dimen/ang_dp_17"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_chapters"
                    android:layout_marginStart="@dimen/ang_dp_17"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:alpha="0.5"
                    android:text="考点专项练习"
                    android:textColor="#5E647D"
                    android:textSize="@dimen/ang_dp_9" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ang_dp_17"
                    android:layout_marginBottom="@dimen/ang_dp_10"
                    android:src="@mipmap/icon_home_enter" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tv_err_col"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/ang_dp_12"
            android:layout_marginTop="@dimen/ang_dp_12"
            android:layout_marginEnd="@dimen/ang_dp_15"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/sl_chapter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_true_exam">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_home_chapters">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/ang_dp_5"
                    android:src="@mipmap/icon_home_colerr" />

                <TextView
                    android:id="@+id/tv_ctsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ang_dp_17"
                    android:layout_marginTop="@dimen/ang_dp_16"
                    android:text="错题·收藏"
                    android:textColor="@color/ang_556DCA"
                    android:textSize="@dimen/ang_dp_17"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ctsc"
                    android:layout_marginStart="@dimen/ang_dp_17"
                    android:layout_marginTop="@dimen/ang_dp_5"
                    android:alpha="0.5"
                    android:text="错题收藏重做"
                    android:textColor="#5E647D"
                    android:textSize="@dimen/ang_dp_9" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ang_dp_17"
                    android:layout_marginBottom="@dimen/ang_dp_10"
                    android:src="@mipmap/icon_home_enter" />

